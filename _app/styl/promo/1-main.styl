#main
	padding 0 0 30px
	min-height calc(100vh - 262px)
	@media screen and (max-width 991px)
		text-align center
.circle
	position absolute
	border-radius: 50%
	z-index -1
	&-full
		background-color: #E4845A
	&-bordered
		border 18px solid #E4845A
	&-1
		top -50px
		left 100px
		width: 92px;
		height: 92px;
		opacity .5
	&-2
		width: 275px;
		height: 275px;
		top 100px
		left -50px
		@media screen and (max-width 991px)
			left -150px
			top 50px
		@media screen and (max-width 560px)
			width 130px
			height: 130px
			border-width: 8px
			left -50px
	&-3
		width: 48px;
		height: 48px;
		bottom: 100px
		left 300px
.main
	&-subtitle
		font-family: F
		font-size: 36px
		font-weight: 900
		margin 30px 0
		@media screen and (max-width 1199px)
			font-size: 28px
			margin: 20px 0
		@media screen and (max-width 560px)
			font-size: 22px
	&-text
		line-height: 140%
		margin-bottom: 20px
		span
			font-weight: 900
			color #E4845A
		@media screen and (max-width 1199px)
			font-size: 20px
		@media screen and (max-width 767px)
			font-size: 20px
			margin-bottom: 20px
		@media screen and (max-width 386px)
			margin-bottom 15px
			font-size: 18px
