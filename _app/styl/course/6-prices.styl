#prices
	padding 180px 0 0
	@media screen and (max-width 991px)
		padding 100px 0 0
	@media screen and (max-width 560px)
		padding 60px 0 0
.packet
	padding 30px 20px
	border-radius: 20px
	border: 3px solid #000
	width 100%
	max-width 800px
	margin 0 auto 50px
	transition: all .3s ease-out
	@media screen and (max-width 991px)
		max-width 480px
	@media screen and (max-width 560px)
		padding 20px 15px
		margin-bottom: 30px
	&:hover
		// transform: translateY(-4px)
		border-color: #E4845A
		box-shadow: 0 10px 15px 8px rgba(0,0,0,.05)
	&-title
		text-align center
		font-family: F
		font-size: 36px
		color #F1C1AD
		margin-bottom: 30px
		span
			display block
			color: #000
			font-family: R
			font-weight: 900
			font-size: 30px
		@media screen and (max-width 560px)
			font-size: 30px
			margin-bottom: 20px
			span
				font-size: 26px
		@media screen and (max-width 386px)
			font-size: 26px
			span
				font-size: 22px
	.general-list
		min-height 210px
		@media screen and (max-width 1199px)
			min-height 290px
		@media screen and (max-width 991px)
			min-height 1px
.prepayment
	text-align center
	&-title
		color red
		font-size: 26px
		font-weight: 900
		margin: 30px 0 20px
		@media screen and (max-width 560px)
			font-size: 22px
			margin 30px 0 20px
		@media screen and (max-width 386px)
			font-size: 22px
			margin 20px 0
			line-height: 1.3
		&-vip
			margin-top: 88px
			@media screen and (max-width 991px)
				margin-top: 30px
	&-text
		margin-bottom: 30px