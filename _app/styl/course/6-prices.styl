#prices
	padding 100px 0 50px
	@media screen and (max-width 991px)
		padding 50px 0 0
.packet
	padding 30px 20px
	border-radius: 20px
	border: 3px solid #000
	width 100%
	max-width 800px
	margin 0 auto 50px
	transition: all .3s ease-out
	@media screen and (max-width 560px)
		padding 20px
	@media screen and (max-width 560px)
		padding 20px 15px
		margin-bottom: 30px
	&:hover
		// transform: translateY(-4px)
		border-color: #E4845A
		box-shadow: 0 10px 15px 8px rgba(0,0,0,.05)
	&-title
		text-align center
		font-family: F
		font-size: 45px
		font-weight: 900
		color #F1C1AD
		margin-bottom: 40px
		span
			display block
			color: #000
			font-weight: bold
			font-size: 40px
		@media screen and (max-width 560px)
			font-size: 36px
			margin-bottom: 20px
			span
				font-size: 32px
		@media screen and (max-width 386px)
			font-size: 30px
			span
				font-size: 24px
	.general-list
		min-height 370px
		@media screen and (max-width 1199px)
			min-height 450px
		@media screen and (max-width 991px)
			min-height 1px
.prepayment
	text-align center
	&-title
		color red
		font-size: 32px
		font-weight: 900
		margin: 40px 0 20px
		@media screen and (max-width 560px)
			font-size: 24px
			margin 30px 0 20px
		@media screen and (max-width 386px)
			font-size: 22px
			margin 20px 0
			line-height: 1.3
	&-text
		margin-bottom: 30px