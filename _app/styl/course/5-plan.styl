#plan
	padding 50px 0 0
	@media screen and (max-width 991px)
		padding 30px 0
.tab-content > .tab-pane
	display: none;
.tab-content > .active
	display: block;
.modules-titles
	width 100%
	// max-width 1360px
	margin 0 auto 50px
	position relative
	z-index 90
	// .slick-list
	// 	overflow visible
	display table
	@media screen and (max-width 1199px)
		display block
	@media screen and (max-width 560px)
		margin-bottom: 30px
	li
		display table-cell
		list-style: none
		width 25%
		@media screen and (max-width 1199px)
			display inline-block
			width 48%
		a
			font-size: 48px
			font-weight: bold
			color #E4845A;
			opacity .5
			padding 0
			width auto
			height auto
			cursor pointer
			transition: all .3s ease
			position relative
			margin-bottom: 40px
			&:hover
				color: #E4845A
				opacity 1
			@media screen and (max-width 991px)
				font-size: 36px
			@media screen and (max-width 560px)
				font-size: 28px
				margin-bottom: 25px
			@media screen and (max-width 386px)
				font-size: 22px
		&.active
			a
				color: #E4845A
				opacity 1
.modules
	margin-bottom: 100px
	position relative
	padding 0px 15px 0
	top 0
	left 0
	height 100%
	@media screen and (max-width 560px)
		padding 0
		margin-bottom: 50px
.module
	&-name
	&-info
		position relative
		font-family: F
		font-size: 42px;
		font-weight: 900;
		margin-bottom: 35px;
		padding: 15px 0 0
		display inline-block
		@media screen and (max-width 991px)
			font-size: 32px
		@media screen and (max-width 560px)
			font-size: 26px
			margin-bottom: 20px
		@media screen and (max-width 386px)
			font-size: 22px
		span
			position relative
			z-index 10
		&:before
			content: '';
			display: block;
			position: absolute;
			-webkit-border-radius: 50%;
			-moz-border-radius: 50%;
			border-radius: 50%;
			background-color: #F1C1AD
			width: 50px;
			height: 50px;
			top: 5px;
			right: -25px
			z-index: -1;
			@media screen and (max-width 991px)
				width 36px
				height: 36px
	&-price
		font-size: 36px
		font-weight: bold
		margin-bottom: 55px
		padding-bottom: 35px
		position relative
		@media screen and (max-width 991px)
			font-size: 28px
		@media screen and (max-width 560px)
			font-size: 24px
			padding-bottom: 20px
			margin-bottom: 35px
		@media screen and (max-width 386px)
			font-size: 20px
		span
			color #e4845a;
			display inline-block
		&:before
			content: '';
			display: block;
			position: absolute;
			width: 88px;
			height: 5px;
			background-color: #000;
			left: 0;
			bottom: 0;
			@media screen and (max-width 560px)
				height: 3px
	&-list
		margin-bottom: 50px
		@media screen and (max-width 991px)
			margin-bottom: 20px
		li
			list-style: none
			position relative
			padding-left: 50px
			margin-bottom: 20px
			@media screen and (max-width 991px)
				padding-left: 36px
			&:before
				content: ''
				display block
				position absolute
				top 20px
				left 0
				width 25px
				height: 5px
				background-color: #E4845A
				@media screen and (max-width 991px)
					width 18px
					height: 3px
					top: 15px
	&-after
		font-size: 30px
		font-weight: bold
		margin-bottom: 35px
		position relative
		display inline-block
		cursor pointer
		@media screen and (max-width 991px)
			font-size: 26px
		@media screen and (max-width 560px)
			font-size: 22px
			margin-bottom: 20px
		@media screen and (max-width 386px)
			padding-right: 20px
		&:after
			content: ''
			display block
			position absolute
			width 24px
			height: 24px
			border-left: 3px solid #F1C1AD
			border-bottom: 3px solid #F1C1AD
			transform: rotate(-45deg)
			top 7px
			right -40px
			transition: all .3s ease-out
			@media screen and (max-width 991px)
				width 18px
				height: 18px
			@media screen and (max-width 560px)
				width 12px
				height: 12px
				right -26px
				top 11px
			@media screen and (max-width 386px)
				right 0
	&-more
		display inline-block
		margin-left: 20px
		cursor pointer
		color #E4845A
		opacity .6
		transition: all .3s ease
		&:hover
			opacity 1
		&.open
			opacity 1
.module-after.open:after
	transform: rotate(135deg)
	top 19px
	@media screen and (max-width 560px)
		top 17px
.closed
	display none
.sublist-info
	display none
	padding-left: 20px
	@media screen and (max-width 560px)
		padding-left: 10px
	@media screen and (max-width 386px)
		padding-left: 0
	&-title
		padding 20px 0
		font-size: 26px
		font-weight: bold
		@media screen and (max-width 991px)
			font-size: 22px
		@media screen and (max-width 386px)
			font-size: 18px
			padding: 15px 0
.module-sublist
	display none
	padding-top: 20px
	li
		&:before
			background-color: #F1C1AD