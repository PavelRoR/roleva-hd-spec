#main
	padding 40px 0 100px
	@media screen and (max-width 991px)
		padding: 0 0 50px
.main
	&-title
		font-family: F
		font-size: 36px
		line-height: 130%
		margin-bottom: 55px
		@media screen and (max-width 991px)
			margin-bottom: 50px
		@media screen and (max-width 560px)
			font-size: 30px
			margin-bottom: 30px
		@media screen and (max-width 386px)
			font-size: 24px
		small
			display block
			font-size: 20px
			font-family: R
			margin-bottom: 15px
			@media screen and (max-width 560px)
				font-size: 16px
				margin-bottom: 10px
	&-info
		p
			font-size: 25px
			font-weight: 300
			display inline-block
			line-height: 33px
			margin-bottom: 50px
			@media screen and (max-width 991px)
				font-size: 22px
				line-height: 1.2
			@media screen and (max-width 560px)
				font-size: 20px
				margin-bottom: 35px
			@media screen and (max-width 386px)
				display block
				width 100%
				max-width 200px
	&-img
		position absolute
		top 0
		right 0
		z-index -1
		width 445px
		@media screen and (max-width 1199px)
			width 380px
		@media screen and (max-width 991px)
			position: static
			display block
			width 100%
			max-width 568px
			margin-top: 50px
		@media screen and (max-width 386px)
			margin-top: 35px