#main
	padding 40px 0 100px
	@media screen and (max-width 991px)
		padding: 0 0 50px
.main
	&-title
		font-family: F
		font-size: 50px
		font-weight: 900
		line-height: 130%
		margin-bottom: 90px
		@media screen and (max-width 991px)
			font-size: 40px
			margin-bottom: 50px
		@media screen and (max-width 560px)
			font-size: 32px
		@media screen and (max-width 386px)
			font-size: 28px
			margin-bottom: 35px
	&-info
		p
			font-size: 34px
			font-weight: 300
			display inline-block
			line-height: 45px
			margin-bottom: 100px
			@media screen and (max-width 991px)
				font-size: 22px
				line-height: 1.2
				margin-bottom: 50px
			@media screen and (max-width 560px)
				font-size: 20px
			@media screen and (max-width 386px)
				display block
				width 100%
				max-width 200px
	&-text
		font-size: 34px
		font-weight: 500
		margin 120px 0 15px
		@media screen and (max-width 991px)
			margin-top: 50px
			font-size: 26px
		@media screen and (max-width 560px)
			font-size: 22px
		@media screen and (max-width 386px)
			margin-top: 35px
	&-img
		position absolute
		top 0
		right 0
		z-index -1
		@media screen and (max-width 1199px)
			right -150px
			top 50px
		@media screen and (max-width 991px)
			position: static
			display block
			width 100%
			max-width 568px
			margin-top: 50px
		@media screen and (max-width 386px)
			margin-top: 35px