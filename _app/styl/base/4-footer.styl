footer
	padding 45px 0
	font-size: 18px
	@media screen and (max-width 991px)
		padding 30px 0
	@media screen and (max-width 560px)
		padding 20px 0
		font-size: 16px
	.&-logo
		width 150px
		margin-bottom: 40px
		@media screen and (max-width 767px)
			margin-bottom: 30px
			width 120px
		@media screen and (max-width 560px)
			margin-bottom: 20px
	.&-text
		margin-bottom: 15px
		@media screen and (max-width 560px)
			margin-bottom: 5px
		&-right
			text-align right
			@media screen and (max-width 991px)
				text-align: left
	.&-hr
		border-top: 3px solid #000
		margin 20px 0 40px
		@media screen and (max-width 560px)
			margin 20px 0
	.&-docs
		display inline-block
		margin-right: 10px
	a
		&:focus
			color #000
			text-decoration none
		&:hover
			color #000
			text-decoration underline