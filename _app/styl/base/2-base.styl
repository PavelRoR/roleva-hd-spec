*
	margin 0
	padding 0
	outline none
body
	font-size: 28px
	font-family: R
	color #000
	background-color #fff
	line-height: 1.56
.wrapper
	overflow hidden
.content
	position relative
	z-index 30
.container
	width 1500px
	@media screen and (max-width 1600px)
			width 1280px
	@media screen and (max-width 1300px)
			width 1170px
	@media screen and (max-width 1199px)
			width 970px
	@media screen and (max-width 991px)
			width 750px
	@media screen and (max-width 767px)
			width 100%
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	display inline-block
	text-align center
	margin 0 auto
	text-decoration none
	color: #000
	width: 100%
	max-width 588px
	border-radius: 50px
	border: 5px solid #000
	padding 27px 80px
	font-size: 24px
	font-weight: 500
	background-color #fff
	transition: all .3s ease
	@media screen and (max-width 560px)
		padding 20px 30px
		font-size: 20px
	&:focus
		text-decoration none
		color #000
	&:hover
		text-decoration none
		color #fff
		background-color: #000
	&-white
		color #fff
		border-color: #fff
		background-color: transparent
		&:focus
			text-decoration none
			color #fff
		&:hover
			color: #fff
			background-color #000
			border-color: #000
	&-form
		background-color: #000
		color #fff
		font-family: U
		font-size: 22px
		font-weight: 500
		padding 20px 30px
		&:hover
			background-color #fff
			color #000
.general-title
	font-family: F
	font-size: 54px
	font-weight: 900
	margin-bottom: 50px
	line-height: 130%
.general-list
	li
		position relative
		list-style: none
	&&-1
		li
			padding-left: 53px
			margin-bottom: 80px
			&:last-child
				margin-bottom: 0
			&:before
				content ''
				display block
				position absolute
				border-radius: 50px
				width 20px
				height: 20px
				background-color: #000
				top 12px
				left 0
	&&-2
		li
			padding-left: 50px
			margin-bottom: 10px
			&:last-child
				margin-bottom: 0
			&:before
				content ''
				display block
				position absolute
				border-radius: 50px
				width 15px
				height: 15px
				background-color: #000
				top 15px
				left 0
	&&-3
		li
			padding-left: 70px
			margin-bottom: 20px
			&:last-child
				margin-bottom: 0
			&:before
				content: ''
				display block
				position absolute
				border-radius: 50px
				top 0
				left 0
				width 40px
				height: 40px
				background-color: #E4845A
			&:after
				content: ''
				display block
				position absolute
				width: 40px;
				height: 40px;
				top 0
				left 0
				background-image: url(../img/icons/check.png)
				background-repeat: no-repeat
				background-position: center
