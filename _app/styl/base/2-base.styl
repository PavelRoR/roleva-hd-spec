*
	margin 0
	padding 0
	outline none
body
	font-size: 20px
	font-family: R
	color #000
	background-color #fff
	line-height: 1.3
	@media screen and (max-width 560px)
		font-size: 16px
.wrapper
	overflow hidden
.content
	position relative
	z-index 30
.container
	width 90%
	max-width 1280px
	margin 0 auto
	@media screen and (max-width 767px)
			width 100%
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	display inline-block
	text-align center
	margin 0 auto
	text-decoration none
	color: #000
	width: 100%
	max-width 424px
	border-radius: 50px
	border: 3px solid #000
	padding 14px 40px
	font-size: 24px
	font-weight: 500
	background-color #fff
	transition: all .3s ease
	@media screen and (max-width 560px)
		padding 14px 20px
		font-size: 18px
	&:focus
		text-decoration none
		color #000
	&:hover
		text-decoration none
		color #fff
		background-color: #000
	&-main
		border-width: 3px
		font-size: 16px
		padding 14px 40px 15px
		max-width none
	&-white
		color #fff
		border-color: #fff
		background-color: transparent
		&:focus
			text-decoration none
			color #fff
		&:hover
			color: #fff
			background-color #000
			border-color: #000
		@media screen and (max-width 991px)
			border: 3px solid #000
			color: #000
			&:focus
				text-decoration none
				color #000
			&:hover
				text-decoration none
				color #fff
				background-color: #000
	&-form
		background-color: #000
		color #fff
		font-family: U
		border-width: 3px
		font-size: 16px
		padding 14px 40px 15px
		max-width none
		&:hover
			background-color #fff
			color #000
		// @media screen and (max-width 560px)
		// 	font-size: 20px
		// 	padding 20px
.general-title
	font-family: F
	font-size: 34px
	margin-bottom: 50px
	line-height: 130%
	@media screen and (max-width 560px)
		font-size: 26px
		margin-bottom: 30px
	@media screen and (max-width 386px)
		font-size: 24px
		line-height: 110%
.general-list
	li
		position relative
		list-style: none
	&&-1
		li
			padding-left: 38px
			margin-bottom: 55px
			&:last-child
				margin-bottom: 0
			&:before
				content ''
				display block
				position absolute
				border-radius: 50px
				width 15px
				height: 15px
				background-color: #000
				top 5px
				left 0
			@media screen and (max-width 991px)
				margin-bottom: 20px
				padding-left: 40px
				&:before
					top 6px
			@media screen and (max-width 560px)
				padding-left: 25px
				margin-bottom: 10px
				&:before
					width 12px
					height: 12px
					top 8px
	&&-2
		li
			padding-left: 35px
			margin-bottom: 10px
			&:last-child
				margin-bottom: 0
			&:before
				content ''
				display block
				position absolute
				border-radius: 50px
				width 10px
				height: 10px
				background-color: #000
				top 9px
				left 0
			@media screen and (max-width 991px)
				padding-left: 35px
				&:before
					top 9px
			@media screen and (max-width 560px)
				padding-left: 25px
				&:before
					width: 10px
					height: 10px
					top 6px
	&&-3
		li
			padding-left: 50px
			margin-bottom: 25px
			@media screen and (max-width 991px)
				padding-left: 50px
			@media screen and (max-width 560px)
				padding-left: 30px
			&:last-child
				margin-bottom: 0
			&:before
				content: ''
				display block
				position absolute
				border-radius: 50px
				top -4px
				left 0
				width 30px
				height: 30px
				background-color: #E4845A
				@media screen and (max-width 560px)
					width 22px
					height: 22px
					top -1px
			&:after
				content: ''
				display block
				position absolute
				width: 20px;
				height: 17px;
				top: 4px;
				left: 5px
				background-image: url(../img/icons/check.png)
				background-repeat: no-repeat
				background-position: center
				background-size contain
				@media screen and (max-width 560px)
					width: 16px;
					height: 11px;
					top: 5px;
					left 3px
@media screen and (max-width 991px)
	.mob-none
		display none