#queries
	padding 100px 0
	@media screen and (max-width 991px)
		padding 50px 0
	@media screen and (max-width 386px)
		padding 30px 0
.query-item
	position relative
	padding-left: 100px
	margin: 90px auto 45px
	@media screen and (max-width 1199px)
		margin-bottom: 120px
	@media screen and (max-width 991px)
		margin-bottom: 90px
	@media screen and (max-width 560px)
		padding-left: 50px
	@media screen and (max-width 386px)
		padding-left: 0
		margin: 40px 0 60px
	&:before
		content: ''
		display block
		position absolute
		width 220px
		height: 220px
		border-radius: 50%
		border: 18px solid rgba(228, 132, 90, 0.5);
		top -80px
		left 10px
	@media screen and (max-width 991px)
		&:before
			width 140px
			height: 140px
			border-width: 10px
			top -50px
	@media screen and (max-width 560px)
		&:before
			left -50px
	@media screen and (max-width 386px)
		&:before
			width 100px
			height: 100px
			top -30px
			left -75px
	&-title
		position relative
		font-size: 40px
		font-weight: 900
		margin-bottom: 35px
		padding-bottom: 30px
		&:before
			content: ''
			display block
			position absolute
			width 88px
			height 5px
			background-color: #000
			left 0
			bottom: 0
		@media screen and (max-width 991px)
			font-size: 30px
			margin-bottom: 20px
			padding-bottom: 25px
		@media screen and (max-width 386px)
			font-size: 24px