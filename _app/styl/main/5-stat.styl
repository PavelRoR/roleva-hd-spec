#statistics
	padding 60px 0
	@media screen and (max-width 991px)
		padding 50px 0
.statistics-img
	display block
	width 100%
	max-width 794px
	margin 15px auto 0
	@media screen and (max-width 991px)
		margin 0 auto 35px
.statistics-title
	font-size: 36px
	font-weight: 900
	margin 100px 0 15px
	@media screen and (max-width 1199px)
		margin-top: 50px
	@media screen and (max-width 991px)
		font-size: 40px
		margin 0 auto 15px
	@media screen and (max-width 560px)
		font-size: 26px
.button-wtapper-statistics
	margin-top: 190px
	@media screen and (max-width 1199px)
		margin-top: 100px
	@media screen and (max-width 991px)
		margin-top: 50px