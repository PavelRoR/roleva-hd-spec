#author
	padding 50px 0 120px
	background-color: #D2D2D2
	background-image: url(../img/backs/author.png)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	@media screen and (max-width 991px)
		padding 50px 0
		background-position: center left
	@media screen and (max-width 386px)
		padding 30px 0 50px
.author-title
	position relative
	font-size: 35px
	font-weight: 500
	margin-bottom: 50px
	padding-bottom: 50px
	@media screen and (max-width 991px)
		font-size: 32px
	&:before
		content: ''
		display block
		position absolute
		width 100px
		height: 5px
		background-color: #000
		left 0
		bottom: 0
	@media screen and (max-width 386px)
		font-size: 24px
		margin-bottom: 30px
		padding-bottom: 33px
		&:before
			height: 3px
.button-wrapper-author
	margin-top: 200px
	@media screen and (max-width 1199px)
		margin-top: 50px
	@media screen and (max-width 386px)
		margin-top: 35px