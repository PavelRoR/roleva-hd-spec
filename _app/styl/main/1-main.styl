#main
	padding 40px 0 100px
	@media screen and (max-width 991px)
		padding: 0 0 50px
.main
	&-title
		font-family: F
		font-size: 50px
		font-weight: 900
		line-height: 130%
		margin-bottom: 90px
		@media screen and (max-width 991px)
			font-size: 40px
			margin-bottom: 50px
		@media screen and (max-width 560px)
			font-size: 32px
		@media screen and (max-width 386px)
			font-size: 28px
			margin-bottom: 35px
	&-info
		p
			font-size: 34px
			font-weight: 300
			display inline-block
			line-height: 45px
			@media screen and (max-width 991px)
				font-size: 22px
				line-height: 1.2
			@media screen and (max-width 560px)
				font-size: 20px
			@media screen and (max-width 386px)
				display block
				width 100%
				max-width 200px
			&:last-of-type
				margin-left: 45px
				padding-left: 45px
				border-left: 5px solid #000
				@media screen and (max-width 1199px)
					margin-left: 15px
					padding-left: 15px
				@media screen and (max-width 991px)
					border-left-width: 3px
				@media screen and (max-width 767px)
					margin-left: 8px
					padding-left: 8px
				@media screen and (max-width 386px)
					margin 15px 0 0
					padding: 15px 0 0
					border-left: 0
					border-top: 3px solid #000
	&-text
		font-size: 34px
		font-weight: 500
		margin 120px 0 15px
		@media screen and (max-width 991px)
			margin-top: 50px
			font-size: 26px
		@media screen and (max-width 560px)
			font-size: 22px
		@media screen and (max-width 386px)
			margin-top: 35px
	&-img
		position absolute
		top 0
		right 0
		z-index -1
		@media screen and (max-width 1199px)
			right -150px
			top 50px
		@media screen and (max-width 991px)
			position: static
			display block
			width 100%
			max-width 568px
			margin-top: 50px
		@media screen and (max-width 386px)
			margin-top: 35px