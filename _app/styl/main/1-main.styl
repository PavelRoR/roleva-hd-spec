#main
	padding 40px 0 100px
	@media screen and (max-width 991px)
		padding: 0 0 50px
.main
	&-title
		font-family: F
		font-size: 36px
		line-height: 130%
		margin-bottom: 55px
		@media screen and (max-width 991px)
			margin-bottom: 50px
		@media screen and (max-width 560px)
			font-size: 30px
		@media screen and (max-width 386px)
			font-size: 24px
			margin-bottom: 35px
	&-info
		p
			font-size: 25px
			font-weight: 300
			display inline-block
			line-height: 33px
			@media screen and (max-width 991px)
				font-size: 22px
				line-height: 1.2
			@media screen and (max-width 560px)
				font-size: 20px
			@media screen and (max-width 386px)
				display block
				width 100%
				max-width 200px
			&:last-of-type
				margin-left: 32px
				padding-left: 32px
				border-left: 3px solid #000
				@media screen and (max-width 1199px)
					margin-left: 15px
					padding-left: 15px
				@media screen and (max-width 991px)
					border-left-width: 3px
				@media screen and (max-width 767px)
					margin-left: 8px
					padding-left: 8px
				@media screen and (max-width 386px)
					margin 15px 0 0
					padding: 15px 0 0
					border-left: 0
					border-top: 3px solid #000
	&-text
		font-size: 25px
		font-weight: 500
		margin 50px 0 10px
		@media screen and (max-width 991px)
			margin-top: 50px
		@media screen and (max-width 560px)
			font-size: 22px
		@media screen and (max-width 386px)
			margin-top: 35px
	&-img
		position absolute
		top 0
		right 0
		z-index -1
		width 445px
		@media screen and (max-width 1199px)
			width 380px
		@media screen and (max-width 991px)
			position: static
			display block
			width 100%
			max-width 568px
			margin-top: 50px
		@media screen and (max-width 386px)
			margin-top: 35px
.form
	width 100%
	max-width 435px