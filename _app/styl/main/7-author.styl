#author
	padding 35px 0 95px
	background-color: #D2D2D2
	background-image: url(../img/backs/author.png)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	@media screen and (min-width 1900px)
		padding 100px 0
	@media screen and (max-width 991px)
		padding 50px 0
		background-image: none
	@media screen and (max-width 386px)
		padding 30px 0 50px
.author-title
	position relative
	font-size: 26px
	font-weight: 500
	margin-bottom: 35px
	padding-bottom: 35px
	&:before
		content: ''
		display block
		position absolute
		width 100px
		height: 3px
		background-color: #000
		left 0
		bottom: 0
		border-radius: 10px
	@media screen and (max-width 560px)
		font-size: 24px
		margin-bottom: 30px
		padding-bottom: 33px
		&:before
			height: 3px
.author-img
	display none
	@media screen and (max-width 991px)
		display block
		width 100%
		max-width 297px
		margin-bottom: 50px
	@media screen and (max-width 386px)
		margin-bottom: 35px
.button-wrapper-author
	margin-top: 185px
	@media screen and (max-width 1199px)
		margin-top: 50px
	@media screen and (max-width 386px)
		margin-top: 35px